.wt-scroller {
	display: block;
	font-family: Arial, Helvetica, sans-serif;
	height: 220px;
	padding-top: 10px;
	position: relative;
	width: 970px;
}

.wt-scroller .slides {
	float: left;
	height: 200px;
	overflow: hidden;
	position: relative;
	width: 900px;
	z-index: 1;
}

.wt-scroller .slides ul {
	list-style: none outside none;
	margin: 0;
	overflow: hidden;
	padding: 0;
	position: relative;
	width: 99999px;
	z-index: 0;
}

.wt-scroller .slides li {
	display: block;
	float: left;
	height: 200px;
	overflow: hidden;
	position: relative;
	width: 300px;
}

.wt-scroller .slides li img {
	border: 0 none;
	left: 0;
	position: absolute;
	top: 0;
	z-index: 0;
}

.wt-scroller .slides li p {
	color: #FFFFFF;
	font-size: 12px;
	left: 0;
	margin: 0;
	padding: 5px;
	position: absolute;
	top: 0;
	visibility: hidden;
	width: 290px;
	z-index: 1;
}

.wt-scroller .outside {
	background-color: #222222;
}

.wt-scroller .inside {
	background: none repeat scroll 0 0 rgba(0, 0, 0, 0.75);
}

.wt-scroller .ie-inside {
	background-color: transparent;
}

.wt-scroller .prev-btn,.wt-scroller .next-btn {
	cursor: pointer;
	float: left;
	height: 200px;
	position: relative;
	width: 35px;
}

.wt-scroller .prev-btn {
	background: url("../images/assets/scroller-icons.png") no-repeat scroll 10px
		center transparent;
}

.wt-scroller .next-btn {
	background: url("../images/assets/scroller-icons.png") no-repeat scroll -46px
		center transparent;
}

.wt-scroller .prev-btn.off,.wt-scroller .next-btn.off {
	cursor: default;
	opacity: 0.5;
}

.wt-scroller .lower-panel {
	clear: both;
	display: block;
	font-size: 0;
	position: relative;
	text-align: center;
}

.wt-scroller .scroll-bar {
	background: -moz-linear-gradient(center top, #999999 0%, #666666 100%)
		repeat scroll 0 0 transparent;
	border-radius: 2px 2px 2px 2px;
	cursor: pointer;
	height: 5px;
	overflow: hidden;
	position: relative;
	width: 100%;
}

.wt-scroller .thumb {
	background: -moz-linear-gradient(center top, #FFFFFF 0%, #CCCCCC 100%)
		repeat scroll 0 0 transparent;
	border-radius: 2px 2px 2px 2px;
	height: 5px;
	left: 0;
	position: absolute;
	top: 0;
	width: 100px;
}

.wt-scroller .thumb:active {
	background: -moz-linear-gradient(center top, #CCCCCC 0%, #FFFFFF 100%)
		repeat scroll 0 0 transparent;
}

.wt-scroller .index,.wt-scroller .index-hl {
	background-image: url("../images/assets/scroller-icons.png");
	background-repeat: no-repeat;
	display: inline-block;
	height: 7px;
	margin: 0 7px;
	position: relative;
	width: 7px;
}

.wt-scroller .index {
	background-position: -25px 0;
	cursor: pointer;
}

.wt-scroller .index:active {
	background-position: -39px 0;
}

.wt-scroller .index-hl {
	background-position: -32px 0 !important;
	cursor: default;
}

.wt-scroller .m-prev,.wt-scroller .m-next {
	background: none repeat scroll 0 0 rgba(0, 0, 0, 0.75);
	color: #DDDDDD;
	cursor: pointer;
	font-size: 26px;
	height: 80px;
	line-height: 80px;
	margin-top: -40px;
	position: absolute;
	text-align: center;
	top: 50%;
	width: 30px;
	z-index: 5;
}

.wt-scroller .m-prev:hover,.wt-scroller .m-next:hover {
	color: #FFFFFF;
}

.wt-scroller .m-prev.off,.wt-scroller .m-next.off {
	cursor: default;
	opacity: 0;
}

.wt-scroller .m-prev {
	border-bottom-right-radius: 6px;
	border-top-right-radius: 6px;
	left: 0;
}

.wt-scroller .m-next {
	border-bottom-left-radius: 6px;
	border-top-left-radius: 6px;
	left: 100%;
	margin-left: -30px;
}